    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.app:app",
                "--reload"
            ],
            "jinja": true
        },
        {
            "name": "Python: worker.py",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/worker/worker.py",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "cwd": "${workspaceFolder}"
        }        
    ]
}